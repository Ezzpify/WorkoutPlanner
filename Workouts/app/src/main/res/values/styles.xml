<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/colorBackground</item>
    </style>

    <style name="ButtonBlue" parent="Widget.AppCompat.Button">
        <item name="android:minHeight">@dimen/button_min_height</item>
        <item name="android:padding">@dimen/padding_view_normal</item>
        <item name="android:background">@drawable/button_blue_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">@dimen/padding_view_small</item>
    </style>

    <style name="ButtonRedRounded" parent="Widget.AppCompat.Button">
        <item name="android:minHeight">@dimen/button_small_min_height</item>
        <item name="android:padding">@dimen/padding_view_small</item>
        <item name="android:background">@drawable/button_blue_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonDark" parent="Widget.AppCompat.Button">
        <item name="android:minHeight">@dimen/button_min_height</item>
        <item name="android:padding">@dimen/padding_view_normal</item>
        <item name="android:background">@drawable/button_dark_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">@dimen/padding_view_small</item>
    </style>

    <style name="ButtonRed" parent="Widget.AppCompat.Button">
        <item name="android:minHeight">@dimen/button_min_height</item>
        <item name="android:padding">@dimen/padding_view_normal</item>
        <item name="android:background">@drawable/button_red_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">@dimen/padding_view_small</item>
    </style>

    <style name="Input" parent="Widget.AppCompat.EditText">
        <item name="android:minHeight">@dimen/input_min_height</item>
        <item name="android:paddingTop">@dimen/padding_view_small</item>
        <item name="android:paddingBottom">@dimen/padding_view_small</item>
        <item name="android:paddingStart">@dimen/padding_view_normal</item>
        <item name="android:paddingLeft">@dimen/padding_view_normal</item>
        <item name="android:paddingEnd">@dimen/padding_view_normal</item>
        <item name="android:paddingRight">@dimen/padding_view_normal</item>
        <item name="android:background">@drawable/input_white</item>
    </style>

    <style name="PageTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="PageSubtitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="PageSubtitleBold" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="DialogTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/padding_view_normal</item>
        <item name="android:layout_marginEnd">@dimen/padding_view_normal</item>
        <item name="android:layout_marginTop">@dimen/padding_view_normal</item>
    </style>

    <style name="DialogText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_margin">@dimen/padding_view_normal</item>
    </style>

    <style name="TextTag" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/content_container_rounded</item>
        <item name="android:paddingTop">@dimen/padding_view_tiny</item>
        <item name="android:paddingBottom">@dimen/padding_view_tiny</item>
        <item name="android:paddingStart">@dimen/padding_view_small</item>
        <item name="android:paddingEnd">@dimen/padding_view_small</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextTagDark" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/content_container_rounded_dark</item>
        <item name="android:paddingTop">@dimen/padding_view_tiny</item>
        <item name="android:paddingBottom">@dimen/padding_view_tiny</item>
        <item name="android:paddingStart">@dimen/padding_view_small</item>
        <item name="android:paddingEnd">@dimen/padding_view_small</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextTagOutline" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/content_container_rounded_outline</item>
        <item name="android:paddingTop">@dimen/padding_view_tiny</item>
        <item name="android:paddingBottom">@dimen/padding_view_tiny</item>
        <item name="android:paddingStart">@dimen/padding_view_small</item>
        <item name="android:paddingEnd">@dimen/padding_view_small</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextTagBlue" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/content_container_rounded_blue</item>
        <item name="android:paddingTop">@dimen/padding_view_tiny</item>
        <item name="android:paddingBottom">@dimen/padding_view_tiny</item>
        <item name="android:paddingStart">@dimen/padding_view_small</item>
        <item name="android:paddingEnd">@dimen/padding_view_small</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
